{
  "name": "@darkbio/crypto",
  "version": "0.1.7",
  "author": "Péter Szilágyi <peter@dark.bio>",
  "description": "Cryptography primitives and wrappers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dark-bio/crypto-ts.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build crates/wasm --target web --out-dir ../../src/wasm",
    "build:ts": "tsc && vite build",
    "build": "npm run build:wasm && npm run build:ts",
    "test": "vitest",
    "test:browser": "vitest --browser.enabled --browser.name=chromium --browser.provider=playwright",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "cborg": "^4.2.0"
  },
  "devDependencies": {
    "@vitest/browser": "^3.0.0",
    "playwright": "^1.50.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "cryptography",
    "post-quantum",
    "c-mldsa",
    "x-wing",
    "hpke",
    "cose"
  ],
  "license": "BSD-3-Clause"
}
